    qryCarPsn.SQL.Add(havingStr);
    qryCarPsn.SQL.Add(' Order by CompName, len(DeptName)');
    qryCarPsn.Open;
    ExceptLogging(qryCarPsn.SQL.Text);
//    if qryTmp.RecordCount > 0 then begin
